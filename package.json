{
  "name": "cyber-trash-press",
  "private": true,
  "version": "1.0.0",
  "description": "A futuristic trash pressing industrial simulator.",
  "author": "Yuta",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"vite\" \"wait-on tcp:5173 && electron .\"",
    "electron:build": "vite build && electron-builder"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3",
    "electron-squirrel-startup": "^1.0.1"
  },
  "dependencies": {
    "phaser": "^3.90.0"
  },
  "build": {
    "appId": "com.yuta.cybertrashpress",
    "productName": "Cyber Trash Press",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.png"
    }
  }
}